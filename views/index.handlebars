<h1>EAT DA BURGER!</h1>

<h2>BURGERS TO EAT!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>BURGERS EATEN!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Did you eat already??</label><br>
    <input type="radio" name="eaten" value="0" checked> No<br>
    <input type="radio" name="eaten" value="1"> Yes
  </div>

  <button type="submit">Add Burger</button>
</form>
